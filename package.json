{
  "name": "novastar-h-series-card",
  "version": "0.1.0",
  "private": true,
  "description": "HACS frontend card for Novastar H Series Home Assistant integration",
  "type": "module",
  "scripts": {
    "build": "esbuild src/novastar-h-series-card.ts --bundle --format=esm --target=es2022 --outfile=novastar-h-series-card.js --minify",
    "build:dev": "esbuild src/novastar-h-series-card.ts --bundle --format=esm --target=es2022 --outfile=novastar-h-series-card.js --sourcemap",
    "watch": "esbuild src/novastar-h-series-card.ts --bundle --format=esm --target=es2022 --outfile=novastar-h-series-card.js --sourcemap --watch"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "lovelace",
    "novastar"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "typescript": "^5.8.2"
  }
}